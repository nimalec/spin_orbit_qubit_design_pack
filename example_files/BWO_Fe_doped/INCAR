SYSTEM = Bi2WO6Fe  
start Parameters
  NWRITE     = 2      ! Medium-level information output
  ISTART     = 1      ! read existing wavefunction; if there
  INIWAV     = 1      ! Random initial wavefunction; otherwise
  ICORELEVEL = 1      ! Print core levels
  NBANDS = 864 
 
parallelisation
  NCORE  = 24         ! No. cores per orbital
  KPAR   = 2          ! K-point parallelisation 
  LPLANE = .TRUE.  

electronic relaxation
  PREC    = Accurate  ! Precision level
  ALGO    = Normal      ! SCF minimisation algorithm; 38/48 combo
  ENCUT   = 800       ! Plane-wave cutoff
  ISMEAR = 0 
  SIGMA = 0.05 
  GGA = PS
  EDIFF = 1E-07  
  LASPH   = .TRUE.    ! Non-spherical elements; d/f convergence
  LREAL   = Auto      ! Projection operators: automatic
  ADDGRID = .TRUE.    ! Increase grid; helps GGA convergence
  !IVDW = 11           ! Grimme's D3 VDW correction
  MAXMIX = 100
  BMIX = 1.5

 
ionic relaxation
  EDIFFG = -0.001      ! Ionic convergence; eV/AA^3
  NSW = 80
  IBRION = 2          ! Algorithm: 0-MD; 1-Quasi-New; 2-CG
  ISIF   = 2        ! Stress/relaxation: 2-Ions, 3-Shape/Ions/V, 7-Vol
  ISYM   = -1          ! Symmetry: 0-none; 2=GGA; 3=hybrids
 
 magnetic
   ISPIN   = 2         ! Enable spin polarisation
   MAGMOM  = 32*0 15*0 96*0 1*6       ! Initial magnetic momoment on each ion

dft+u
  LDAU    = .TRUE.    ! Activate DFT+U
  LDATYPE = 2         ! Dudarev; only U-J matters
  LDAUL   = -1 -1 -1 2     ! Orbitals for each species
  LDAUU   = 0 0 0 4      ! U for each species
  LDAUJ   = 0 0 0 0      ! J for each species
  LMAXMIX = 4         ! Mixing cut-off; 4-d, 6-f 
